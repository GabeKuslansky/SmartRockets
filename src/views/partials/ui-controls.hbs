<div class='col-sm'>
    <div class="row">
        <div class='col-6 border-left'>

            {{!-- Population Slider --}}
            <label for="populationSlider">Population Size: <span id='populationValue'></span></label>
            <input type="range" class="custom-range" value='50' min="1" max="200" step="1" id="populationSlider">

            {{!-- Mutation Rate --}}
            <label for="mutationSlider">Mutation Rate: <span id='mutationValue'></span></label>
            <input type="range" class="custom-range" min="0" max="100" step="0.1" id="mutationSlider">

            {{!-- Lifespan --}}
            <label for="lifespanSlider">Lifespan: <span id='lifespanValue'></span></label>
            <input type="range" class="custom-range" value='50' min="5" max="2000" step="1" id="lifespanSlider">
        </div>
        <div class="col-6">
            <span>Fitness Algorithm</span>
            <select class='browser-default custom-select'>
                <option selected hidden disabled>Please Select</option>
                <option>Distance</option>
                <option>Distance & Time</option>
            </select>
            <button id='createLevelBtn' class='btn btn-primary mt-5' onclick='saveLevel()'>Upload level <i class='fas fa-cloud-upload-alt'></i></button>
        </div>
    </div>
</div>

<script src='/public/js/ui-controls.js'></script>